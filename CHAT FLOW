    <script>
        // Initialize Stripe with your publishable key
        const stripe = Stripe('pk_test_your_publishable_key_here'); // Replace with your actual key
        
        // Set up Stripe Elements
        const elements = stripe.elements();
        const cardElement = elements.create('card');
        cardElement.mount('#card-element');
        
        // Handle form submission
        const form = document.getElementById('checkout-form');
        const cardErrors = document.getElementById('card-errors');
        
        form.addEventListener('submit', async (event) => {
            event.preventDefault();
            
            const submitButton = document.getElementById('submit-button');
            submitButton.disabled = true;
            submitButton.textContent = 'Processing...';
            
            const {error, paymentMethod} = await stripe.createPaymentMethod({
                type: 'card',
                card: cardElement,
                billing_details: {
                    email: document.getElementById('email').value,
                },
            });
            
            if (error) {
                cardErrors.textContent = error.message;
                submitButton.disabled = false;
                submitButton.textContent = `Pay $${document.getElementById('plan-price').textContent}/month`;
            } else {
                // In a real application, you would send the paymentMethod.id to your server
                // Here we'll simulate a successful payment
                cardErrors.textContent = '';
                simulateSuccessfulPayment();
            }
        });
        
        function simulateSuccessfulPayment() {
            // This is a simulation - in a real app, you would make an API call to your server
            setTimeout(() => {
                alert('Payment successful! Your subscription is now active.');
                document.getElementById('checkout-modal').style.display = 'none';
                const submitButton = document.getElementById('submit-button');
                submitButton.disabled = false;
                submitButton.textContent = `Pay $${document.getElementById('plan-price').textContent}/month`;
            }, 1500);
        }
        
        // Modal functionality
        const modal = document.getElementById('checkout-modal');
        const closeModalBtn = document.getElementById('close-modal');
        const planButtons = document.querySelectorAll('.select-plan');
        const selectedPlanElement = document.getElementById('selected-plan');
        const planPriceElement = document.getElementById('plan-price');
        
        planButtons.forEach(button => {
            button.addEventListener('click', () => {
                const plan = button.getAttribute('data-plan');
                const price = button.getAttribute('data-price');
                
                selectedPlanElement.textContent = plan.charAt(0).toUpperCase() + plan.slice(1);
                planPriceElement.textContent = price;
                
                modal.style.display = 'flex';
            });
        });
        
        closeModalBtn.addEventListener('click', () => {
            modal.style.display = 'none';
        });
        
        window.addEventListener('click', (event) => {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Login/Signup buttons (simulated)
        document.getElementById('login-btn').addEventListener('click', (e) => {
            e.preventDefault();
            alert('Login functionality would open here. This would connect to Supabase authentication.');
        });
        
        document.getElementById('signup-btn').addEventListener('click', (e) => {
            e.preventDefault();
            alert('Signup functionality would open here. This would connect to Supabase authentication.');
        });
    </script>
    
